<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:cardBackgroundColor="#363636"

        android:layout_margin="2dp"
        app:cardCornerRadius="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="left">

        <ImageView
                android:layout_alignParentLeft="true"
                android:id="@+id/ivAvatar"
                android:layout_width="180dp"
                android:layout_height = "300dp"
                android:layout_gravity="center"
                android:src="@drawable/therift" />

        <ImageView
                android:id="@+id/play"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/play"
                android:visibility="invisible"
        />

        <TextView
                android:layout_toEndOf="@id/ivAvatar"
                android:layout_width="wrap_content"
                tools:text="The Rift"
                android:textSize="28dp"
                android:layout_margin="10dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:id="@+id/NameFilm"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_toEndOf="@id/ivAvatar"
                android:layout_below="@id/NameFilm"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                tools:text="Release_date"
                android:textSize="16dp"
                android:textColor="#BEBEBE"
                android:id="@+id/Release"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivAvatar"
                android:layout_below="@+id/Release"
                android:layout_marginLeft="10dp"
                android:text="original_language"
                android:layout_marginTop="10dp"
                android:textColor="#BEBEBE"
                android:textSize="16dp"
                android:id="@+id/language"
                android:layout_marginStart="8dp"


        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toEndOf="@+id/ivAvatar"
                  android:layout_below="@+id/language"
                  android:layout_marginLeft="10dp"
                  android:text="popularity"
                  android:layout_marginTop="10dp"
                  android:textColor="#BEBEBE"
                  android:textSize="16dp"
                  android:id="@+id/popularity"
                  android:layout_marginStart="8dp"


        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivAvatar"
                android:layout_below="@+id/popularity"
                android:layout_marginLeft="10dp"
                android:text="vote_count"
                android:layout_marginTop="10dp"
                android:textColor="#BEBEBE"
                android:textSize="16dp"
                android:id="@+id/vote_count"
                android:layout_marginStart="8dp"

        />


    </RelativeLayout>

</android.support.v7.widget.CardView>